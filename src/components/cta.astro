---
import Link from "./ui/link.astro";
import {  getLangFromUrl, useTranslations } from '@i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="bg-black px-20 py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-3xl md:text-6xl">{t("home.enjoy")}</h2>
  <p class="text-slate-500 mt-4 text-lg md:text-xl">
    {t("home.enjoy2")}
  </p>
  <div class="flex mt-5">
    <Link href="#" style="inverted">{t("home.button")}<https://chromewebstore.google.com/detail/notionai%E6%8F%92%E4%BB%B6/jndldoeopjgmpakgmieaeeelhnjnfgkj?hl=zh-CN&utm_source=ext_sidebar>
  </div>
</div>
